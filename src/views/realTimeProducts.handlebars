<div>
    <h1>Lista de Productos en Tiempo Real (WEBSOCKET)</h1>
    <table id="productsTable"></table>
</div>
<div>
    <h1>Ingreso de productos</h1>
    <form action="" id="prodForm">
        <div>
            <label for="prodTitle">Título: </label>
            <input type="text" id="prodTitle" required>
        </div>
        <div>
            <label for="prodDescription">Descripción: </label>
            <input type="text" id="prodDescription" required>
        </div>
        <div>
            <label for="prodCode">Código: </label>
            <input type="text" id="prodCode" required>
        </div>
        <div>
            <label for="prodPrice">Precio: </label>
            <input type="number" id="prodPrice" required>
        </div>
        <div>
            <label for="prodStock">Stock: </label>
            <input type="number" id="prodStock" required>
        </div>
        <div>
            <label for="prodCategory">Categoría: </label>
            <input type="text" id="prodCategory" required>
        </div>
        <div>
            <label for="prodThumbnails">Imágenes: </label>
            <input type="text" id="prodThumbnails">
        </div>
        <button type="submit">Ingresar Producto</button>
    </form>
</div>
<div>
    <h1>Eliminación de productos</h1>
    <form action="" id="removeForm">
        <div>
            <label for="prodId">ID: </label>
            <input type="text" id="prodId" required>
        </div>
        <button type="submit">Eliminar Producto</button>
    </form>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>